# Dockerfile-stripe-webhook
FROM python:3.10-slim

# Set the working directory in the container
WORKDIR /app

# Install the PostgreSQL development package
RUN apt-get update && apt-get install -y libpq-dev gcc

# Copy the requirements file into the container
COPY config/other_configs/requirements.txt requirements.txt

# Install any needed packages specified in requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy the current directory contents into the container at /app
COPY src/ src/
COPY config/gunicorn/gunicorn_stripe_config.py config/gunicorn/gunicorn_stripe_config.py

# Define the command to run the application
CMD ["gunicorn", "-c", "config/gunicorn/gunicorn_stripe_config.py", "src.wsgi_stripe:app"]
